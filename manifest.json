{
  "manifest_version": 3,
  "name": "AgentAnything",
  "version": "1.0",
  "description": "AI network inspection via Chrome DevTools Protocol",
  "permissions": [
    "debugger",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/agent_bridge.js", "content/agent_dashboard.js"],
      "run_at": "document_idle"
    }
  ]
}
