{
  "name": "AgentAnything",
  "description": "Multi-tab AI orchestration and automation layer.",
  "version": "1.0.0",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "debugger"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AgentAnything",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/agent_bridge.js",
        "content/target_adapter.js",
        "content/agent_dashboard.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content/network_hook.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
